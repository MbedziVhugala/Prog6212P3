@model Prog6212.ViewModels.ClaimViewModel

@{
    ViewData["Title"] = "Review Claim";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-search"></i> Review Claim #@Model.Id</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Claim Information</h6>
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <th>Lecturer:</th>
                                    <td>@Model.LecturerName</td>
                                </tr>
                                <tr>
                                    <th>Submission Date:</th>
                                    <td>@Model.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Hours Worked:</th>
                                    <td>@Model.HoursWorked</td>
                                </tr>
                                <tr>
                                    <th>Hourly Rate:</th>
                                    <td>R @Model.HourlyRate.ToString("N2")</td>
                                </tr>
                                <tr class="table-primary">
                                    <th><strong>Total Amount:</strong></th>
                                    <td><strong>R @Model.TotalAmount.ToString("N2")</strong></td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h6>Additional Information</h6>
                            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <p class="card-text">@Model.AdditionalNotes</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No additional notes provided.</p>
                            }

                            @if (!string.IsNullOrEmpty(Model.SupportingDocumentPath))
                            {
                                <div class="mt-3">
                                    <a href="/uploads/@Model.SupportingDocumentPath"
                                       class="btn btn-outline-primary btn-sm" target="_blank">
                                        <i class="fas fa-download"></i> Download Document
                                    </a>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Approval Actions -->
                    <div class="row mt-4">
                        <div class="col-md-8 offset-md-2">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">Approval Decision</h6>
                                </div>
                                <div class="card-body">
                                    <form method="post" id="approvalForm">
                                        <div class="mb-3" id="rejectionReason" style="display: none;">
                                            <label for="rejectionReasonInput" class="form-label">Rejection Reason</label>
                                            <textarea id="rejectionReasonInput" name="rejectionReason" class="form-control" rows="3"
                                                      placeholder="Please provide a reason for rejection..." required></textarea>
                                        </div>

                                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                            <button type="submit" formaction="@Url.Action("ApproveClaim", "Coordinator", new { id = Model.Id })"
                                                    class="btn btn-success btn-lg me-md-2">
                                                <i class="fas fa-check-circle"></i> Approve Claim
                                            </button>
                                            <button type="button" id="rejectBtn" class="btn btn-danger btn-lg">
                                                <i class="fas fa-times-circle"></i> Reject Claim
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("PendingClaims", "Coordinator")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Pending Claims
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('rejectBtn').addEventListener('click', function() {
            const rejectionReason = document.getElementById('rejectionReason');
            if (rejectionReason.style.display === 'none') {
                rejectionReason.style.display = 'block';
                this.innerHTML = '<i class="fas fa-paper-plane"></i> Confirm Rejection';
                this.classList.remove('btn-danger');
                this.classList.add('btn-warning');
            } else {
                const reason = document.getElementById('rejectionReasonInput').value.trim();
                if (reason === '') {
                    alert('Please provide a reason for rejection.');
                    return;
                }
                // Submit the rejection form
                const form = document.getElementById('approvalForm');
                form.action = '@Url.Action("RejectClaim", "Coordinator", new { id = Model.Id })';
                form.submit();
            }
        });
    </script>
}