@model IEnumerable<Prog6212.ViewModels.ClaimViewModel>

@{
    ViewData["Title"] = "Pending Claims";
}

<div class="container">
    <h2><i class="fas fa-clock"></i> Pending Claims</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
            <h4>No Pending Claims</h4>
            <p class="text-muted">All claims have been processed.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Amount</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>#@claim.Id</td>
                                    <td>@claim.LecturerName</td>
                                    <td>R @claim.TotalAmount.ToString("N2")</td>
                                    <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("ReviewClaim", "Coordinator", new { id = claim.Id })"
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i> Review
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>