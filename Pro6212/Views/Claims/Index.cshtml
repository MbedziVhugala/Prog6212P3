@model List<Prog6212.ViewModels.ClaimSummaryViewModel>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-file-invoice"></i> My Claims
        </h2>
        <a href="@Url.Action("Create", "Claim")" class="btn btn-success">
            <i class="fas fa-plus"></i> New Claim
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-list"></i> Claim History</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Submission Date</th>
                                <th>Hours</th>
                                <th>Rate (R)</th>
                                <th>Total (R)</th>
                                <th>Status</th>
                                <th>Document</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.OrderByDescending(c => c.SubmissionDate))
                            {
                                <tr>
                                    <td>@claim.Id</td>
                                    <td>@claim.SubmissionDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>@claim.HourlyRate.ToString("N2")</td>
                                    <td><strong>R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(claim.Status) @GetStatusTextClass(claim.Status)">
                                            <i class="@GetStatusIcon(claim.Status)"></i> @claim.Status
                                        </span>
                                        @if (claim.Status == "Pending")
                                        {
                                            <br />
                                            <small class="text-muted">Awaiting approval</small>
                                        }
                                        else if (claim.Status == "Approved")
                                        {
                                            <br />
                                            <small class="text-muted">Payment processed</small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                                        {
                                            <i class="fas fa-file-pdf text-success" title="Document attached"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times text-muted" title="No document"></i>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Claim", new { id = claim.Id })"
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        @if (claim.Status == "Pending")
                                        {
                                            <form asp-action="Withdraw" asp-route-id="@claim.Id" method="post"
                                                  class="d-inline" onsubmit="return confirm('Are you sure you want to withdraw this claim? This action cannot be undone.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Withdraw Claim">
                                                    <i class="fas fa-undo"></i> Withdraw
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- CLAIM STATISTICS -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body text-center">
                        <h4>@Model.Count</h4>
                        <p>Total Claims</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body text-center">
                        <h4>@Model.Count(c => c.Status == "Pending")</h4>
                        <p>Pending</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h4>@Model.Count(c => c.Status == "Approved")</h4>
                        <p>Approved</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body text-center">
                        <h4>R @Model.Where(c => c.Status == "Approved").Sum(c => c.TotalAmount).ToString("N2")</h4>
                        <p>Total Approved</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h3>No Claims Submitted</h3>
            <p class="text-muted mb-4">You haven't submitted any claims yet. Start by submitting your first claim to track its progress through the approval process.</p>
            <a href="@Url.Action("Create", "Claim")" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Submit Your First Claim
            </a>
        </div>
    }
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Withdrawn" => "bg-secondary",
            _ => "bg-info"
        };
    }

    public string GetStatusTextClass(string status)
    {
        return status switch
        {
            "Pending" => "text-dark",
            "Approved" => "text-white",
            "Rejected" => "text-white",
            "Withdrawn" => "text-white",
            _ => "text-white"
        };
    }

    public string GetStatusIcon(string status)
    {
        return status switch
        {
            "Pending" => "fas fa-clock",
            "Approved" => "fas fa-check-circle",
            "Rejected" => "fas fa-times-circle",
            "Withdrawn" => "fas fa-undo",
            _ => "fas fa-info-circle"
        };
    }
}