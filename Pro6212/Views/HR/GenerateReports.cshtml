@{
    ViewData["Title"] = "Generate Reports";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>
                <i class="fas fa-chart-bar"></i> Generate Reports
            </h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row mt-4">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-file-pdf"></i> PDF Reports</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Generate comprehensive PDF reports with claims and user data using LINQ queries.</p>
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item">• Claims by status</li>
                                <li class="list-group-item">• User statistics</li>
                                <li class="list-group-item">• Financial summaries</li>
                            </ul>
                            <form method="post" action="@Url.Action("GeneratePDFReport", "HR")">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-download"></i> Generate PDF Report
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-chart-line"></i> System Analytics</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">View real-time system statistics and analytics with interactive charts.</p>
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item">• User role distribution</li>
                                <li class="list-group-item">• Claims status overview</li>
                                <li class="list-group-item">• Financial analytics</li>
                            </ul>
                            <a href="@Url.Action("SystemAnalytics", "HR")" class="btn btn-info w-100">
                                <i class="fas fa-chart-bar"></i> View Analytics
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Report Information</h5>
                </div>
                <div class="card-body">
                    <p>All reports are generated using <strong>LINQ queries</strong> as required by the project checklist.</p>
                    <p>Reports include:</p>
                    <ul>
                        <li>Claims grouped by status</li>
                        <li>User statistics by role</li>
                        <li>Financial summaries and totals</li>
                        <li>Monthly claim trends</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>