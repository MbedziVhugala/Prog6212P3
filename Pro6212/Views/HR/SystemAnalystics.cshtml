@model dynamic
@{
    ViewData["Title"] = "System Analytics";
}

<div class="container">
    <h2>
        <i class="fas fa-chart-line"></i> System Analytics
    </h2>

    <div class="row mt-4">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalUsers</h4>
                            <p>Total Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalClaims</h4>
                            <p>Total Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>R @Model.TotalAmountApproved.ToString("N2")</h4>
                            <p>Total Approved</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@DateTime.Now.ToString("MMM yyyy")</h4>
                            <p>Current Period</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Claims by Status</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.ClaimsByStatus)
                    {
                        <div class="mb-2">
                            <strong>@item.Status:</strong>
                            <span class="badge bg-primary float-end">@item.Count</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user-friends"></i> Users by Role</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.UsersByRole)
                    {
                        <div class="mb-2">
                            <strong>@item.Role:</strong>
                            <span class="badge bg-success float-end">@item.Count</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("GenerateReports", "HR")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Reports
        </a>
    </div>
</div>