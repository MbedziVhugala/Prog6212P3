@model Prog6212.ViewModels.ClaimViewModel

@{
    ViewData["Title"] = "Review Claim";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4><i class="fas fa-search"></i> Review Claim #@Model.Id</h4> <!-- Fixed: Changed ClaimId to Id -->
            </div>
            <div class="card-body">
                <!-- Claim Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6>Claim Information</h6>
                        <table class="table table-sm table-bordered">
                            <tr>
                                <th>Lecturer:</th>
                                <td>@Model.LecturerName</td>
                            </tr>
                            <tr>
                                <th>Submission Date:</th>
                                <td>@Model.SubmissionDate.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <th>Hours Worked:</th>
                                <td>@Model.HoursWorked</td>
                            </tr>
                            <tr>
                                <th>Hourly Rate:</th>
                                <td>R @Model.HourlyRate.ToString("N2")</td>
                            </tr>
                            <tr class="table-primary">
                                <th><strong>Total Amount:</strong></th>
                                <td><strong>R @Model.TotalAmount.ToString("N2")</strong></td>
                            </tr>
                            <tr>
                                <th>Status:</th>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(Model.Status)">
                                        @Model.Status
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h6>Additional Information</h6>
                        @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                        {
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">@Model.AdditionalNotes</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No additional notes provided.</p>
                        }

                        @if (!string.IsNullOrEmpty(Model.SupportingDocumentPath))
                        {
                            <div class="mt-3">
                                <a href="@Url.Action("Download", "Document", new { fileName = Model.SupportingDocumentPath })"
                                   class="btn btn-outline-primary btn-sm" target="_blank">
                                    <i class="fas fa-download"></i> Download Supporting Document
                                </a>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No supporting document attached.</p>
                        }
                    </div>
                </div>

                <!-- Approval Actions - Only show for pending claims and approvers -->
                @if (Model.Status == "Pending" && (User.IsInRole("Coordinator") || User.IsInRole("Manager")))
                {
                    <div class="row">
                        <div class="col-md-8 offset-md-2">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">Approval Decision</h6>
                                </div>
                                <div class="card-body">
                                    <form method="post" id="approvalForm">
                                        @Html.AntiForgeryToken()
                                        <div class="mb-3" id="rejectionReason" style="display: none;">
                                            <label for="rejectionReasonInput" class="form-label">Rejection Reason</label>
                                            <textarea id="rejectionReasonInput" name="rejectionReason" class="form-control" rows="3"
                                                  placeholder="Please provide a reason for rejection..."></textarea>
                                        </div>

                                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                            <button type="submit" formaction="@Url.Action("Approve", "Approval", new { id = Model.Id })"
                                                    class="btn btn-success btn-lg me-md-2">
                                                <i class="fas fa-check-circle"></i> Approve Claim
                                            </button>
                                            <button type="button" id="rejectBtn" class="btn btn-danger btn-lg">
                                                <i class="fas fa-times-circle"></i> Reject Claim
                                            </button>
                                            <button type="submit" formaction="@Url.Action("Reject", "Approval", new { id = Model.Id })"
                                                    id="rejectSubmit" style="display: none;"></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.Status != "Pending")
                {
                    <div class="alert alert-info text-center">
                        <h6><i class="fas fa-info-circle"></i> Claim Status: @Model.Status</h6>
                        <p class="mb-0">This claim has already been processed and cannot be modified.</p>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>

                <!-- Withdraw button for lecturers on their own pending claims -->
                @if (User.IsInRole("Lecturer") && Model.Status == "Pending")
                {
                    <form asp-action="Withdraw" asp-controller="Claim" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-warning"
                                onclick="return confirm('Are you sure you want to withdraw this claim?')">
                            <i class="fas fa-undo"></i> Withdraw Claim
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const rejectBtn = document.getElementById('rejectBtn');

            if (rejectBtn) {
                rejectBtn.addEventListener('click', function() {
                    const rejectionReason = document.getElementById('rejectionReason');
                    if (rejectionReason.style.display === 'none') {
                        rejectionReason.style.display = 'block';
                        this.innerHTML = '<i class="fas fa-paper-plane"></i> Confirm Rejection';
                        this.classList.remove('btn-danger');
                        this.classList.add('btn-warning');
                    } else {
                        // Validate rejection reason
                        const reason = document.querySelector('#rejectionReasonInput').value.trim();
                        if (reason === '') {
                            alert('Please provide a reason for rejection.');
                            return;
                        }
                        document.getElementById('rejectSubmit').click();
                    }
                });
            }
        });
    </script>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}